import React, { useState, useEffect } from 'react';

export default function CharacterSheetArtifact() {
  const [character, setCharacter] = useState(null);
  const [loading, setLoading] = useState(true);
  const [lastUpdate, setLastUpdate] = useState(null);
  const [error, setError] = useState(null);
  const [autoRefreshEnabled, setAutoRefreshEnabled] = useState(true);

  const FLASK_URL = 'https://unquenchable-anastacia-nonobstetricitly.ngrok-free.dev/character/get_state';

  const fetchCharacterState = async () => {
    try {
      const response = await fetch(FLASK_URL, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({})
      });
      const data = await response.json();
      
      if (data.status === 'SUCCESS') {
        setCharacter(data.character);
        setLastUpdate(new Date().toISOString());
        setError(null);
      } else {
        setError(data.message || 'Failed to fetch character state');
      }
    } catch (err) {
      setError(`Connection error: ${err.message}`);
    } finally {
      setLoading(false);
    }
  };

  useEffect(() => {
    fetchCharacterState();
  }, []);

  // Auto-refresh every 30 seconds
  useEffect(() => {
    if (!autoRefreshEnabled) return;
    
    const interval = setInterval(fetchCharacterState, 30000);
    return () => clearInterval(interval);
  }, [autoRefreshEnabled]);

  const formatDate = (iso) => {
    if (!iso) return 'Never';
    return new Date(iso).toLocaleString();
  };

  const renderTier = (value) => {
    if (!value) return '?';
    return `${value}/25+`;
  };

  const renderAttribute = (value) => `${value}/25`;

  if (error) {
    return (
      <div className="w-full p-8 bg-red-50 border border-red-300 rounded">
        <h2 className="text-lg font-bold text-red-900 mb-2">⚠️ Connection Error</h2>
        <p className="text-red-800">{error}</p>
        <button 
          onClick={fetchCharacterState}
          className="mt-4 px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700"
        >
          Retry Connection
        </button>
      </div>
    );
  }

  if (loading) {
    return (
      <div className="w-full p-8 bg-gray-100 rounded text-center">
        <p className="text-gray-700">Loading character state from Flask...</p>
      </div>
    );
  }

  if (!character) {
    return (
      <div className="w-full p-8 bg-yellow-50 border border-yellow-300 rounded">
        <p className="text-yellow-800">Character data not loaded</p>
      </div>
    );
  }

  const tiers = character.tiers || {};
  const attrs = character.attributes || {};
  const competencies = character.competencies || {};
  const dcBalance = character.advancement?.dc_balance || { current_balance: 0, earned_total: 0, spent_total: 0 };
  const ability = character.active_ability;
  const equipment = character.equipment || {};
  const financials = character.financial || {};
  const identity = character.identity || {};
  const statusEffects = character.status_effects || [];

  return (
    <div className="w-full max-w-7xl mx-auto p-6 bg-gradient-to-b from-gray-900 to-gray-800 text-gray-100 rounded-lg shadow-2xl font-mono text-sm">
      
      {/* HEADER */}
      <div className="flex justify-between items-center mb-6 pb-4 border-b border-gray-700">
        <div>
          <h1 className="text-2xl font-bold text-cyan-400">{identity.legal_name || 'Unknown'}</h1>
          <p className="text-xs text-gray-400">
            Physical Age: {identity.physical_age} | Mental Age: {identity.mental_age} | 
            Transmigrated: {identity.transmigration_date}
          </p>
        </div>
        <div className="text-right text-xs text-gray-400">
          <p>Last Update: {formatDate(lastUpdate)}</p>
          <button 
            onClick={fetchCharacterState}
            className="mt-1 px-3 py-1 bg-cyan-600 hover:bg-cyan-500 rounded text-cyan-100"
          >
            Manual Refresh
          </button>
          <label className="block mt-2 text-xs">
            <input 
              type="checkbox" 
              checked={autoRefreshEnabled}
              onChange={(e) => setAutoRefreshEnabled(e.target.checked)}
              className="mr-1"
            />
            Auto-refresh 30s
          </label>
        </div>
      </div>

      {/* MAIN GRID */}
      <div className="grid grid-cols-3 gap-4 mb-4">
        
        {/* LEFT PANEL: Stats */}
        <div className="col-span-1 space-y-4">
          
          {/* CONSCIOUSNESS */}
          <div className="bg-gray-800 p-3 rounded border border-purple-700">
            <h3 className="text-purple-400 font-bold mb-2">CONSCIOUSNESS</h3>
            <p className="text-xs text-gray-300">Primary: {character.consciousness?.primary_layer}</p>
            <p className="text-xs text-gray-300">Reference: {character.consciousness?.reference_layer}</p>
            <p className="text-xs text-green-400 font-bold">{character.consciousness?.integration_status}</p>
          </div>

          {/* TIERS */}
          <div className="bg-gray-800 p-3 rounded border border-blue-700">
            <h3 className="text-blue-400 font-bold mb-2">TIERS</h3>
            <div className="grid grid-cols-2 gap-1 text-xs">
              <div className="bg-gray-900 p-2 rounded">
                <span className="text-gray-400">Speed:</span>
                <span className="text-cyan-400 font-bold ml-1">{renderTier(tiers.speed)}</span>
              </div>
              <div className="bg-gray-900 p-2 rounded">
                <span className="text-gray-400">Reflexes:</span>
                <span className="text-cyan-400 font-bold ml-1">{renderTier(tiers.reflexes)}</span>
              </div>
              <div className="bg-gray-900 p-2 rounded">
                <span className="text-gray-400">Power:</span>
                <span className="text-red-400 font-bold ml-1">{renderTier(tiers.power)}</span>
              </div>
              <div className="bg-gray-900 p-2 rounded">
                <span className="text-gray-400">Resistance:</span>
                <span className="text-orange-400 font-bold ml-1">{renderTier(tiers.resistance)}</span>
              </div>
            </div>
          </div>

          {/* ATTRIBUTES */}
          <div className="bg-gray-800 p-3 rounded border border-green-700">
            <h3 className="text-green-400 font-bold mb-2">ATTRIBUTES</h3>
            <div className="space-y-1 text-xs">
              <div>
                <span className="text-gray-400">Skills:</span>
                <span className="text-green-400 font-bold ml-1">{renderAttribute(attrs.skills)}</span>
              </div>
              <div>
                <span className="text-gray-400">Resourcefulness:</span>
                <span className="text-green-400 font-bold ml-1">{renderAttribute(attrs.resourcefulness)}</span>
              </div>
            </div>
          </div>
        </div>

        {/* CENTER PANEL: DC & Ability */}
        <div className="col-span-1 space-y-4">
          
          {/* DC BALANCE */}
          <div className="bg-gray-800 p-3 rounded border border-yellow-700">
            <h3 className="text-yellow-400 font-bold mb-2">DC BALANCE</h3>
            <div className="bg-gray-900 p-2 rounded mb-2">
              <p className="text-yellow-300 text-sm font-bold">
                {dcBalance.current_balance}
              </p>
              <p className="text-xs text-gray-400">current</p>
            </div>
            <div className="grid grid-cols-2 gap-2 text-xs">
              <div className="bg-gray-900 p-1 rounded">
                <p className="text-green-400 font-bold">{dcBalance.earned_total}</p>
                <p className="text-gray-500">earned</p>
              </div>
              <div className="bg-gray-900 p-1 rounded">
                <p className="text-red-400 font-bold">{dcBalance.spent_total}</p>
                <p className="text-gray-500">spent</p>
              </div>
            </div>
          </div>

          {/* ACTIVE ABILITY */}
          <div className="bg-gray-800 p-3 rounded border border-pink-700">
            <h3 className="text-pink-400 font-bold mb-2">ACTIVE ABILITY</h3>
            {ability ? (
              <div className="bg-gray-900 p-2 rounded text-xs space-y-1">
                <p><span className="text-gray-400">Name:</span> <span className="text-pink-300 font-bold">{ability.name}</span></p>
                <p><span className="text-gray-400">Domain:</span> <span className="text-pink-300">{ability.domain}</span></p>
                <p><span className="text-gray-400">Enhancement:</span> <span className="text-pink-300 font-bold">{ability.enhancement_level}</span></p>
                <p className="text-xs text-gray-500 pt-1">Manifested: {formatDate(ability.manifested_date)}</p>
              </div>
            ) : (
              <div className="bg-gray-900 p-2 rounded text-xs text-gray-400">
                None - Enhancement 0
              </div>
            )}
          </div>

          {/* FINANCIAL */}
          <div className="bg-gray-800 p-3 rounded border border-green-700">
            <h3 className="text-green-400 font-bold mb-2">FINANCIAL</h3>
            <div className="space-y-1 text-xs bg-gray-900 p-2 rounded">
              <p><span className="text-gray-400">Assets:</span> <span className="text-green-300 font-bold">${financials.liquid_assets}</span></p>
              <p><span className="text-gray-400">Runway:</span> <span className="text-green-300">{financials.runway_months} months</span></p>
            </div>
          </div>
        </div>

        {/* RIGHT PANEL: Competencies & Equipment */}
        <div className="col-span-1 space-y-4">
          
          {/* COMPETENCIES */}
          <div className="bg-gray-800 p-3 rounded border border-indigo-700 max-h-40 overflow-y-auto">
            <h3 className="text-indigo-400 font-bold mb-2">COMPETENCIES</h3>
            <div className="space-y-1 text-xs">
              {Object.entries(competencies).length > 0 ? (
                Object.entries(competencies).map(([key, value]) => (
                  <div key={key} className="bg-gray-900 p-1 rounded flex justify-between">
                    <span className="text-gray-400">{key}:</span>
                    <span className="text-indigo-300 font-bold">{value}</span>
                  </div>
                ))
              ) : (
                <p className="text-gray-500 text-xs">None tracked</p>
              )}
            </div>
          </div>

          {/* EQUIPMENT */}
          <div className="bg-gray-800 p-3 rounded border border-red-700">
            <h3 className="text-red-400 font-bold mb-2">EQUIPMENT</h3>
            <div className="space-y-1 text-xs bg-gray-900 p-2 rounded">
              <p>
                <span className="text-gray-400">Armor:</span> 
                <span className={equipment.armor_destroyed ? 'text-red-500 font-bold ml-1' : 'text-green-400 ml-1'}>
                  {equipment.armor_destroyed ? 'DESTROYED' : `Tier ${equipment.armor_tier || 0}`}
                </span>
              </p>
              {equipment.items_owned && equipment.items_owned.length > 0 && (
                <div className="mt-2 pt-2 border-t border-gray-700">
                  <p className="text-gray-400 mb-1">Items:</p>
                  {equipment.items_owned.map((item, idx) => (
                    <p key={idx} className="text-gray-300">• {item}</p>
                  ))}
                </div>
              )}
            </div>
          </div>

          {/* STATUS EFFECTS */}
          {statusEffects.length > 0 && (
            <div className="bg-gray-800 p-3 rounded border border-orange-700">
              <h3 className="text-orange-400 font-bold mb-2">STATUS EFFECTS</h3>
              <div className="space-y-1 text-xs">
                {statusEffects.map((effect, idx) => (
                  <div key={idx} className="bg-gray-900 p-1 rounded">
                    <p className="text-orange-300">{effect.name || 'Unknown'}</p>
                    {effect.description && <p className="text-gray-400 text-xs">{effect.description}</p>}
                  </div>
                ))}
              </div>
            </div>
          )}
        </div>
      </div>

      {/* FOOTER */}
      <div className="text-xs text-gray-500 border-t border-gray-700 pt-3">
        <p>Karmic System Active | Session: {character.identity?.current_date}</p>
        <p className="text-xs text-gray-600">Character sheet auto-refreshes every 30 seconds (when enabled)</p>
      </div>
    </div>
  );
}
